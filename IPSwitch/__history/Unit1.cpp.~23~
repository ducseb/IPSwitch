#include <vcl.h>
#include <stdlib.h>
#pragma hdrstop
#include <windows.h>
#include <winsock.h>
#include "Unit1.h"
#pragma comment( lib, "wsock32.lib" )
#include <iostream.h>
	

//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button1Click(TObject *Sender)
{
			String nomInterface = lblNomLan->Text;
			String phrase1="netsh interface ip set address \"";
			String phrase2="\" dhcp";
			String bon=phrase1+nomInterface+phrase2;
		   system(bon.c_str());
		   system("ipconfig /release");
		   system("ipconfig /renew");
		   ShowMessage("La commande d'adresse IP dynamique à été envoyée");
}


//---------------------------------------------------------------------------
void __fastcall TForm1::Button2Click(TObject *Sender)
{
		String nomInterface = lblNomLan->Text;
		String phrase1="netsh interface ip set address name=\"";
		String phrase2="\" source=static addr=192.168.4.253 mask=255.255.255.0";
		String bon=phrase1+nomInterface+phrase2;
		system(bon.c_str());
		ShowMessage("La commande de changement d'adresse à été envoyée");

}
}
//---------------------------------------------------------------------------


